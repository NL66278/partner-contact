<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="form_res_partner_relation_all" model="ir.ui.view">
            <field name="model">res.partner.relation.wizard</field>
            <field name="arch" type="xml">
                <form string="Partner relation">
                    <group>
                        <field name="this_partner_id" />
                        <field name="type_selection_id" />
                        <field name="other_partner_id" />
                    </group>
                    <group>
                        <field name="date_start" />
                        <field name="date_end" />
                        <field name="active" />
                    </group>
                </form>
            </field>
        </record>

        <record
            id="action_res_partner_relation_wizard"
            model="ir.actions.act_window"
            >
            <field name="name">Relations</field>
            <field name="res_model">res.partner.relation.wizard</field>
            <field name="src_model">res.partner.relation.all</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="multi">True</field>
            <field name="view_id" ref="form_res_partner_relation_all"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Record and track your partners' relations. Relations may
                    be linked to other partners with a type either directly
                    or inversely.
                </p>
            </field>
        </record>

    </data>
</openerp>
